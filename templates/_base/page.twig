{% extends "_base/base" %}

{% block documentHead %}
    {% block head %}{% endblock %}
{% endblock %}

{% block page %}
    {% if notifications.text1|length %}
        {% include "_components/banner-notification" with { message: notifications.text1 } %}
    {% endif %}
    {% include "_components/header" %}
    <main class="page" css="soft-loading" style="min-height: calc(100% - 2rem);">
        {% block content %}{% endblock %}
    </main>
    {% include "_components/footer" %}
{% endblock %}
